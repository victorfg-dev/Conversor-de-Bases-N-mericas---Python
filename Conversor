n = str(input('Digite um número em qualquer base: '))
basei = int(input('Digite a base do número digitado: '))

carac = len(n)

vlr = 0
vlrnum = 0
expo = 0
soma = 0
for c in range(carac - 1, -1, -1):
    if n[c] in 'ABCDEF':
        vlr = ord(n[c]) - 55
        soma += (vlr * (basei ** expo))
    elif n[c] in '01234556789':
        vlrnum = int(n[c])
        soma += (vlrnum * (basei ** expo))
    else:
        'Inválido.'    
    expo += 1
        
print(soma)
